<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/fondEcranBlancCasse"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo_j_joummah_orangexxxhdpi"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorNoirProfond"
                android:text="Joummah veut vous accompagner dans votre apprentissage de l\'islam, c\'est pour cela que nous diffusons également des prêches chaque vendredi. On se donne rendez-vous tous les vendredis pour un nouveau prêche in sha Allah ?!

                \nNous sommes aussi présent sur :
\nInstagram : JoummahOfficiel
\nFacebook : Joummah
\nYoutube : Joummah
\nSnapchat : Joummah
\n
\nQu\’Allah vous accorde la réussite ici-bas ainsi que dans l\’au-delà !"
                tools:layout_editor_absoluteX="122dp"
                tools:layout_editor_absoluteY="180dp" />

            <Button
                android:id="@+id/button_retour_ecran_khoutba"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorOrangeChaud"
                android:text="Retour" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>